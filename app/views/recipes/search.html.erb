<% if @recipes.present? %>
  <table class="table" class="table table-striped", style: "border: 1px">
    <thead>
      <tr>
        <th>Name</th>
        <th>Instructions</th>
        <th>Cooking Time</th>
        <th>Ingredients</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
        <% @recipes.each do |recipe| %>
          <tr>
            <td><%= recipe.name %></td>
            <td><%= recipe.instructions %></td>
            <td><%= recipe.cooking_time %> min</td>
            <td><%= recipe.ingredients.pluck(:name)%>
          </tr>
        <% end %>
    </tbody>
  </table>
<%else%>
  <p>No Data Found</p>
<%end%>